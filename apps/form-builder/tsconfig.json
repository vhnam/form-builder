{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/constants/*": ["./constants/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/mocks/*": ["./mocks/*"],
      "@/modules/*": ["./modules/*"],
      "@/providers/*": ["./providers/*"],
      "@/schemas/*": ["./schemas/*"],
      "@/services/*": ["./services/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
